<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/human_background_image"
                    android:layout_width="match_parent"
                    android:layout_height="811dp"
                    android:src="@drawable/human2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/brust"
                    android:layout_width="78dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/arm2"
                    app:layout_constraintTop_toBottomOf="@+id/schultern"
                    app:srcCompat="@drawable/brust" />

                <ImageView
                    android:id="@+id/schultern2"
                    android:layout_width="173dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="248dp"
                    app:layout_constraintStart_toEndOf="@+id/schultern"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/schultern" />

                <ImageView
                    android:id="@+id/schultern"
                    android:layout_width="129dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="248dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/arm3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/schultern" />

                <ImageView
                    android:id="@+id/bauch"
                    android:layout_width="68dp"
                    android:layout_height="89dp"
                    android:layout_marginTop="316dp"
                    android:layout_marginEnd="72dp"
                    app:layout_constraintEnd_toStartOf="@+id/arm3"
                    app:layout_constraintTop_toTopOf="@+id/human_background_image"
                    app:srcCompat="@drawable/bauch_ruecken" />


                <ImageView
                    android:id="@+id/ruecken"
                    android:layout_width="73dp"
                    android:layout_height="79dp"
                    android:layout_marginTop="316dp"
                    android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/bauch_ruecken" />

                <ImageView
                    android:id="@+id/arm1"
                    android:layout_width="67dp"
                    android:layout_height="172dp"
                    android:layout_marginTop="256dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/bauch"
                    app:layout_constraintTop_toTopOf="@+id/human_background_image"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/arm2"
                    android:layout_width="67dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="276dp"
                    app:layout_constraintEnd_toStartOf="@+id/arm3"
                    app:layout_constraintTop_toTopOf="@+id/human_background_image"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/arm3"
                    android:layout_width="66dp"
                    android:layout_height="164dp"
                    android:layout_marginTop="264dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ruecken"
                    app:layout_constraintTop_toTopOf="@+id/human_background_image"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/arm4"
                    android:layout_width="65dp"
                    android:layout_height="137dp"
                    android:layout_marginStart="80dp"
                    app:layout_constraintBottom_toTopOf="@+id/bein4"
                    app:layout_constraintStart_toEndOf="@+id/arm3"
                    app:layout_constraintTop_toBottomOf="@+id/schultern2"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/bein1"
                    android:layout_width="94dp"
                    android:layout_height="192dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/bein2"
                    app:layout_constraintTop_toBottomOf="@+id/brust"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/bein2"
                    android:layout_width="93dp"
                    android:layout_height="193dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/bein3"
                    app:layout_constraintTop_toBottomOf="@+id/arm2"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/bein3"
                    android:layout_width="96dp"
                    android:layout_height="222dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bein4"
                    app:layout_constraintEnd_toStartOf="@+id/bein4"
                    app:layout_constraintTop_toBottomOf="@+id/schultern2"
                    app:layout_constraintVertical_bias="0.945"
                    app:srcCompat="@drawable/arme_beine" />

                <ImageView
                    android:id="@+id/bein4"
                    android:layout_width="100dp"
                    android:layout_height="232dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="136dp"
                    app:layout_constraintStart_toEndOf="@+id/arm3"
                    app:layout_constraintTop_toBottomOf="@+id/schultern2"
                    app:srcCompat="@drawable/arme_beine" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="132dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Auslastung:"
                    android:textColor="@color/primary_icon"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>